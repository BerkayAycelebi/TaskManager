@model IEnumerable<TaskManager.Models.Task>
@{
    ViewData["Title"] = "Completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Completed</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Başlık:
            </th>
            <th>
                Görevin Açıklaması:
            </th>
            <th>
                Görevin Durumu:
            </th>
            <th>
                Planlanan Tarihi:
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionDate)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Gerçekleştir</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>