@model TaskManager.Models.Task

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 style="color:green">Görev Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Başlık:
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
               Açıklama:
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          
                    <input class="form-check-input" asp-for="IsDone" hidden /> 
           
            <div class="form-group">
              Planlanan Tarih:
                <input asp-for="ExecutionDate" class="form-control" />
                <span asp-validation-for="ExecutionDate" class="text-danger"></span>
            </div>
          
                <div class="form-group">
                 

                    <select  asp-for="UserId" class="form-control" hidden asp-items="ViewBag.UserId" style="unvi"></select>
                </div>
           


            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Listeye Dön</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
