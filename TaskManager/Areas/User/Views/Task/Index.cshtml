@model IEnumerable<TaskManager.Models.Task>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:green">Görev Listesi</h1>
@ViewBag.Data
<p>
    <a asp-action="Create" class="btn btn-primary">Görev Ekle</a>
</p>
<table class="table table-striped table-bordered" id="jsTable">
    <thead>
        <tr>
            <th>
                Başlık:
            </th>
            <th>
                Görevin Açıklaması:
            </th>
           
            <th>
                Planlanan Tarihi:
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionDate)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Gerçekleştir</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
<script type="text/javascript">
        $(document).ready( function () {
        $('#jsTable').DataTable({"language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }});
    } );
</script>
}